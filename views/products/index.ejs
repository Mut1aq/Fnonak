<%- include('../includes/head.ejs') %> <% if(products.length > 0 ) { %> <%
for(let product of products){ %>
<h1>All Products</h1>
<div>
  <h1>title: <%= product.title %></h1>
</div>
<div>
  <h2>description: <%= product.description %></h2>
</div>
<div>
  <h2>price: <%= product.price %></h2>
</div>
<div>
  <h2>category: <%= product.category %></h2>
</div>
<div>
  <h2>In Stock: <%= product.quantity > 0 ? "yes" : 'No' %></h2>
</div>
<div>
  <h2>Views: <%= product.views %></h2>
</div>
<div>
  <% for(let image of product.images) {%>
  <img src="<%= image.url %> " alt="product image" />
  <% } %>
</div>
<h2>Made By: <%= product.author.username %></h2>
<a href="/product/<%= product._id %>">Product Details</a>

<% } %> <% } else { %>
<h1>no products found</h1>
<a href="/product/new">Add New Product</a>
<% } %> <%-include('../includes/end.ejs')%>
