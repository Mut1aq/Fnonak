<%- include('../includes/head.ejs') %>
<h1>Add New Product</h1>
<form action="/product" method="post" enctype="multipart/form-data">
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="product[title]" />
  </div>

  <div>
    <label for="description">description</label>
    <textarea
      name="product[description]"
      id="description"
      cols="30"
      rows="10"
    ></textarea>
  </div>
  <div>
    <label for="price">Price</label>
    <input type="number" id="price" name="product[price]" />
  </div>
  <div>
    <label for="qty">Quantity</label>
    <input type="number" id="qty" name="product[quantity]" />
  </div>
  <div>
    <label for="category">Category</label>
    <select name="product[category]" id="category">
      <% for(let category of categories) {%>
      <option value="<%= category.type %>"><%= category.type %></option>
      <% } %>
    </select>
  </div>
  <div>
    <label for="images">Images</label>
    <input type="file" id="images" multiple name="images" />
  </div>
  <!-- <div>
    <label for="video">Video</label>
    <input type="file" id="video" name="video" />
  </div> -->
  <div>
    <button type="submit">Add</button>
  </div>
</form>
<%-include('../includes/end.ejs')%>
